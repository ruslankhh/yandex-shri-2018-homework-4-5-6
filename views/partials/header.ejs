<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title><%= (title ? title + ' | ' : '') + config.title %></title>
  <link href="/styles/styles.css" rel="stylesheet" type="text/css">
</head>
<body>
  <header class="header">
    <a class="header__title" href="/"><%= config.title %></a>
    <nav class="header__nav">
      <ul>
        <% links.forEach(link => { %>
          <li class="nav-item">
            <a class="nav-item__link" href="<%= link.url %>">
              <%= link.title %>
            </a>
          </li>
        <% }); %>
      </ul>
    </nav>
    <% if (!error) { %>
      <nav class="header__nav-tree">
        <% if (nav.branches) { %>
          <span class="header__branch">
            <select class="branch-select" name="branch-select">
              <% branches.forEach((value, i) => { %>
                <option value="<%= value %>" <%= value === object ? 'selected' : '' %>>
                  <%= value %>
                </option> 
              <% }); %>
            </select>
          </span>
        <% } %>
        <% if (nav.breadcrumbs) { %>
          <span class="breadcrumbs">
            <% breadcrumbs.forEach((item, i) => { %>
              <span class="breadcrumbs__item <%= item.isBlob ? 'breadcrumbs__item--close' : '' %>">
                <% if (i < breadcrumbs.length - 1) { %>
                  <a href="/<%= `${item.type}/${object}/${item.filepath}` %>"><%= item.base %></a>
                <% } else { %>
                  <span><%= item.base %></span>
                <% } %>
              </span>
            <% }) %>
          </span>
        <% } %>
      </nav>
    <% } %>
  </header>
  <main class="content">
